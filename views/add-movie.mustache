<html>
    <head>
     <link rel="stylesheet" type="text/css" href="/css/styles.css">
    </head>
    <body>
    {{>menu}}
        <h1>Add a new movie</h1>
        <form id="createTripForm" method= 'POST' action= "/movies/add-movie">
            <input type="text" placeholder ="Movie Title" name="title" />
            <input type="text" placeholder ="Movie Description" name= "description" />
            <label for="cars">Choose a Genre:</label>
            <select name="genre" id="genre">
                <option value="action">Action</option>
                <option value="comedy">Comedy</option>
                <option value="drama">Drama</option>
                <option value="fantasy">Fantasy</option>
                <option value="horror">Horror</option>
                <option value="mystery">Mystery</option>
                <option value="romance">Romance</option>
                <option value="thriller">Thriller</option>
            </select>
            <input type="text" placeholder ="Paste Image URL here" name= "image" />
            <button id= "save">Save</button>
        </form>
    </body>
</html>